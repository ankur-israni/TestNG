<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name = "Parallel Testing Suite" parallel = "tests" thread-count = "2">
    <test name = "UI Tests">
        <classes>
            <class name = "com.ankur.testng.parallel_suite_tests.ChromeTest" />
            <class name = "com.ankur.testng.parallel_suite_tests.FirefoxTest" />
        </classes>
    </test>

    <test name = "Integration Tests">
        <classes>
            <class name = "com.ankur.testng.parallel_suite_tests.IntegrationTest1" />
            <class name = "com.ankur.testng.parallel_suite_tests.IntegrationTest2" />
        </classes>
    </test>

    <test name = "Unit Tests">
        <classes>
            <class name = "com.ankur.testng.parallel_suite_tests.UnitTest1" />
            <class name = "com.ankur.testng.parallel_suite_tests.UnitTest2" />
        </classes>
    </test>

</suite>
